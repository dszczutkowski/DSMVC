}

<h2>Index</h2>

<p>
    @Html.ActionLink("Stwórz nowe zamówienie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Meal.Name)
        </th>
